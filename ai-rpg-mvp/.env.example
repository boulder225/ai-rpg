# AI RPG Context Tracker - Environment Variables

# Server Configuration
PORT=8080
HOST=0.0.0.0  
READ_TIMEOUT=15s
WRITE_TIMEOUT=15s
IDLE_TIMEOUT=60s

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=false
CORS_MAX_AGE=86400

# Database Configuration (PostgreSQL)
POSTGRES_URL=postgres://rpguser:rpgpass@localhost:5432/rpgdb?sslmode=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=30m
DB_CONN_MAX_IDLE_TIME=10m
DB_SSL_MODE=disable

# Redis Configuration (Optional - for caching)
REDIS_URL=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=false
REDIS_MAX_RETRIES=3
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5
REDIS_MAX_CONN_AGE=30m
REDIS_POOL_TIMEOUT=4s
REDIS_IDLE_TIMEOUT=5m

# Context Manager Configuration
CONTEXT_MAX_ACTIONS=50
CONTEXT_CACHE_TIMEOUT=30m
CONTEXT_PERSIST_INTERVAL=5m
CONTEXT_EVENT_QUEUE_SIZE=1000
CONTEXT_CLEANUP_INTERVAL=6h
CONTEXT_MAX_AGE=720h  # 30 days

# AI Integration Configuration
AI_PROVIDER=openai
AI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_TIMEOUT=30s
AI_MAX_RETRIES=3
AI_RETRY_DELAY=1s
AI_RATE_LIMIT_REQUESTS=60
AI_RATE_LIMIT_DURATION=1m
AI_ENABLE_CACHING=true
AI_CACHE_TTL=10m

# Logging Configuration
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json  # json, text
LOG_OUTPUT=stdout  # stdout, stderr, file path
LOG_MAX_SIZE=100  # MB
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28  # days
LOG_COMPRESS=true

# Environment
ENV=development  # development, staging, production

# Monitoring (Optional)
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true

# Feature Flags (Optional)
FEATURE_AI_CACHING=true
FEATURE_CONTEXT_COMPRESSION=false
FEATURE_ADVANCED_METRICS=false
FEATURE_RATE_LIMITING=true

# Security (Production)
# JWT_SECRET=your_jwt_secret_here
# ENCRYPTION_KEY=your_32_byte_encryption_key_here
# ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
